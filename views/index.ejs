    <script>
        function gen(length = 30) {
        var buf = new Uint8Array(length);window.crypto.getRandomValues(buf);
        var value = btoa(String.fromCharCode.apply(null, buf)).replace(/\//g,"_").replace(/\+/g,"").replace(/\=/g,"").substring(0,length)
        document.getElementById('pw').innerHTML = value
        document.getElementById('hiddenInput').value = value
        }
        gen()
    </script>
    <script>
    const copy = document.getElementById("copybtn");
    const code = document.getElementById("hiddenInput");
        copy.onclick = function() {
        code.setAttribute("style", "display: initial;");
        code.select();
        document.execCommand("copy");
        code.setAttribute("style", "display: none;");
        copy.innerText = "Copied!";
        setTimeout(function() {
          copy.innerText = 'Copy';
        }, 750);
        };
    </script>
